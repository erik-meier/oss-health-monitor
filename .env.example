# Application settings
APP_NAME=OSS Health Monitor
APP_VERSION=0.1.0
DEBUG=false

# Server settings
HOST=0.0.0.0
PORT=8000

# Database settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/oss_health_monitor
DATABASE_ECHO=false

# CORS settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# GitHub Configuration
# Generate a personal access token at: https://github.com/settings/tokens
# Requires 'repo' scope for private repositories, or no scopes for public repos
GITHUB_TOKEN=

# Scanner Configuration
# Path to osv-scanner binary (default: osv-scanner assumes it's in PATH)
OSV_SCANNER_PATH=osv-scanner

# Cache Configuration
# How long to cache scan results (in hours)
SCAN_CACHE_TTL_HOURS=12
# Maximum number of scan results to cache
SCAN_CACHE_MAX_SIZE=1000
